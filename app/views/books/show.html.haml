.page-title.detail-page-title{ style: "background-image:url('/images/books_on_desk2.jpg');" }
  .container
    .flex-row
      .flex-column.flex-md-8.flex-sm-12
        %h1.hero-title ランディングページ・デザインメソッド
        %p.line18 WEB制作のプロが教えるLPの考え方、設計、コーディング、コンテンツ制作ガイド
      .flex-column.flex-md-4.flex-align-bottom.flex-sm-12.mt-20-sm
        .text-right.text-left-sm
          %a.anchor.btn.btn-primary{:href => "#"} 購入ページヘ
/ end Page title
.breadcrumb-wrapper.bg-light-2
  .container
    %ol.breadcrumb-list
      %li
        = link_to "Home", books_path
      %li
        %a{:href => "#"} デザイン
      %li
        %span
          = @book.title
.content-wrapper
  .container
    .row
      .col-sm-3.col-xs-12.mb-50-xs
        .scrollspy-sidebar.sidebar-detail{:role => "complementary"}
          = image_tag @book.image.content
      .col-md-9.mt-30-xs{:role => "main"}
        .detail-content-wrapper
          #section-0.detail-content
            .section-title.text-left
              %h4 概要
            / <div class="book-title col-sm-9">
            %h5.heading
              = @book.title
            /
              </div>
              <div class="book-price text-right col-sm-3">
            %h5.price.mt-0
              金額:
              %span
                #{@book.price}円
            / </div>
          #section-2.detail-content
            .section-title.text-left
              %h4 詳細
            .detail-item
              .row
                .col-sm-4.col-sm-3
                  %ul.list-info.no-icon.bb-dotted
                    %li
                      %span.font600 出品者:
                      = link_to @book.user.name, "#"
                    %li
                      %span.font600 カテゴリ:
                      デザイン
                    %li
                      %span.font600 状態:
                      やや傷あり
                .col-sm-8.col-md-9
                  .itinerary-wrapper
                    .itinerary-item
                      %h5.mb-20 この本について
                      .intro-item-body
                        %p
                          = @book.description
              .text-center.pt-10
                %a.btn.btn-primary.btn-full-width{:href => "#"} 購入ページヘ
          .detail-content
            .section-title.text-left
              %h4 関連する書籍
            .GridLex-gap-20-wrappper.package-grid-item-wrapper.on-page-result-page.alt-smaller
              .GridLex-grid-noGutter-equalHeight
                = render partial: "related_book", collection: @related_books, as: "book"
          .call-to-action
            %a.btn.btn-primary.btn-sm.btn-inverse{:href => "#"} お問い合わせ
